//- Custom Configuration
block config
  //- Setup site's base URL to match the "baseUrl" key within `package.json`
  //- Otherwise default to relative pathing
  - var baseUrl = config.baseUrl || './'

doctype html
<html class='no-js' lang='en'>

head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
  title sw-lp
  meta(name='description', content= 'A new Yeogurt application')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  block stylesheets
    link(rel='stylesheet', href= baseUrl + 'styles/main.css')

body
    <!--[if lt IE 11]>
    <p class='browsehappy'>You are using an <strong>outdated</strong> browser. Please <a href='http://browsehappy.com/'>upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    section.ui-top-line
        .l-grid.l-grid--container
            .l-row.l-row--xs-middle
                .l-col.l-col--xs-12.l-col--md-8
                    nav.ui-menu-top
                        .ui-menu-top__item
                            a.ui-menu-top__link О компании
                        .ui-menu-top__item
                            a.ui-menu-top__link Доставка и оплата
                        .ui-menu-top__item
                            a.ui-menu-top__link Гарантия и возврат
                        .ui-menu-top__item
                            a.ui-menu-top__link Отзывы
                        .ui-menu-top__item
                            a.ui-menu-top__link Сервис
                        .ui-menu-top__item
                            a.ui-menu-top__link Оптовикам
                        .ui-menu-top__item
                            a.ui-menu-top__link Контакты
                .l-col.l-col--xs-12.l-col--md-4
                    .ui-top-phone
                        .ui-top-phone__label Бесплатно по РФ
                        .ui-top-phone__number 8 (800) 123-32-23

    header.ui-header
        .l-grid.l-grid--container
            .l-row.l-row--xs-middle
                .l-col.l-col--xs-12.l-col--md-3
                    .ui-header__logo
                        .ui-logo
                            img(src="/images/logo-top.png")
                .l-col.l-col--xs-12.l-col--md-6
                    .ui-header__characteristics
                        .ui-characteristics
                            .ui-characteristics__item
                                .ui-characteristics__icon
                                    img(src="/images/green-energy.png", srcset="/images/green-energy@2x.png 2x, /images/green-energy@3x.png 3x")
                                .ui-characteristics__text До 50 км на
                                    br
                                    | одной зарядке
                            .ui-characteristics__item
                                .ui-characteristics__icon
                                    img(src="/images/nuclear.png", srcset="/images/nuclear@2x.png 2x, /images/nuclear@3x.png 3x")
                                .ui-characteristics__text Скорость
                                    br
                                    | до 55 км/ч
                            .ui-characteristics__item
                                .ui-characteristics__icon
                                    img(src="/images/battery.png", srcset="/images/battery@2x.png 2x, /images/battery@3x.png 3x")
                                .ui-characteristics__text 10 000 циклов заряда аккумулятора
                .l-col.l-col--xs-12.l-col--md-3
                    .ui-header__phone
                        .ui-header-phone
                            .ui-header-phone__number  +7 (495) 123-23-32
                            .ui-header-phone__label Ежедневно с 09:30 до 00:00
    block content

    block scripts
        script(src= baseUrl + 'scripts/main.js')

</html>
